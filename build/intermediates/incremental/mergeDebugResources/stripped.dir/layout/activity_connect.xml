<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".activity.ConnectActivity">
    <RelativeLayout
        android:id="@+id/tab"
        android:background="@drawable/bg_tab"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/btnBack"
            android:padding="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="Select a device"
            android:fontFamily="@font/chakra_petch_medium"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btnInfo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_14sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewSearch"
        android:backgroundTint="#1ACBCBCB"
        android:background="@drawable/corner_10dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_below="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_marginVertical="@dimen/_10sdp"
            style="@style/SpinKitView.FadingCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="#AF7DFF" />
        <TextView
            android:textSize="20sp"
            android:fontFamily="@font/chakra_petch_medium"
            android:textColor="@color/white"
            android:text="@string/searching"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/chakra_petch_medium"
            android:textColor="@color/white"
            android:text="@string/make_sure_your"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/viewDevice"
        android:layout_below="@id/tab"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvDevice"
            android:layout_marginTop="18dp"
            tools:listitem="@layout/item_device"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/chakra_petch_regular"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/make_sure"
            android:layout_below="@id/rcvDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_marginVertical="@dimen/_10sdp"
            style="@style/SpinKitView.FadingCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="#AF7DFF" />
    </LinearLayout>


</RelativeLayout>